<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/white1_9_bg">

            <TextView
                android:id="@+id/message_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="订单消息"
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-30"
                android:textColor="#aaaaaa"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/message_title_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/message_title_view" />

            <TextView
                android:id="@+id/content_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:text="您有一条微博订单，请尽快接单。"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/message_title_view"
                app:layout_constraintRight_toRightOf="@+id/time_view"
                app:layout_constraintTop_toBottomOf="@+id/message_title_view" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="查看详情"
                android:textColor="#aaaaaa"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/content_view"
                app:layout_constraintTop_toBottomOf="@+id/content_view" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:src="@mipmap/arrow1_icon"
                app:layout_constraintBottom_toBottomOf="@+id/textview1"
                app:layout_constraintRight_toRightOf="@+id/time_view"
                app:layout_constraintTop_toTopOf="@+id/textview1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="47dp"
            android:background="#eeeeee" />

        <View
            android:id="@+id/red_point_view"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/solid_f55a59_radius_100_bg" />
    </FrameLayout>
</FrameLayout>